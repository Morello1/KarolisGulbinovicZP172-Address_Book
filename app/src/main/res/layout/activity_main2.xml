<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="#516035">

    <EditText
        android:id="@+id/numeris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pavarde"
        android:ems="10"
        android:inputType="phone"
        android:hint="Numeris" />

    <EditText
        android:id="@+id/Vardas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Vardas" />

    <EditText
        android:id="@+id/Pavarde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Vardas"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Pavarde" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numeris"
        android:onClick="Action2"
        android:text="Add" />


</RelativeLayout>